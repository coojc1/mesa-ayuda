<%- include("base-panel.ejs") %>
<link rel="stylesheet" href="/css/company/register-ticket.css">

    <div class="container">
        <form action="/ticket-generate/new" method="post">
            <div class="content-top">
                <i class="fa fa-ticket" aria-hidden="true"></i>
                <h1>Generar un nuevo ticket</h1>
            </div>
            <div class="form-group">
                <label for="">
                    <i class="fa-solid fa-triangle-exclamation"></i> Categoría del error
                </label>
                <select class="form-control" id="" name="referencia">
                    <% for(let i = 0; i < referencias.length; i++) { %>
                        <option value="<%= referencias[i].id_referencia_pk %>">
                            <%= referencias[i].contenido %>
                        </option>
                    <% } %>
                </select>

                <label for="">
                    <i class="fa-solid fa-code-branch"></i> Versión del software
                </label>
                <input type="text" name="version" id="" class="form-control" placeholder="Versión del software" required autocomplete="off">

                <label for="">
                    <i class="fa fa-file-text-o" aria-hidden="true"></i> Descripción de la falla
                </label>
                <textarea class="form-control" name="descripcion" id="" placeholder="Indica la falla del producto..."></textarea>

                <div class="buttons">
                    <button type="submit" name="" id="" class="btn btn-primary">
                        <i class="fa fa-ticket" aria-hidden="true"></i> Generar ticket
                    </button>
                    <a name="" id="" class="btn btn-link" href="/company-panel" role="button">
                        <i class="fa fa-arrow-circle-left" aria-hidden="true"></i> Cancelar
                    </a>
                </div>
            </div>
        </form>
    </div>