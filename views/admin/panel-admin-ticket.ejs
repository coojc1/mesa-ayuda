<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap-5.3.3-dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/c55ac3095c.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/admin/nav-panel.css">
    <link rel="stylesheet" href="/css/admin/panel-admin-ticket.css">
    <link rel="shortcut icon" href="/res/logo-5.png" type="image/x-icon">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <title>Información del Ticket</title>
</head>
<body>
    <div class="container-fluid">
        <%- include("nav-panel.ejs") %>

        <div class="content">
            <div class="empresa-info">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-building-o" aria-hidden="true"></i>
                        <h3><%= ticket[0].nombre %></h3>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Datos de contacto</h4>
                        <p class="card-text">
                            <i class="fa fa-phone" aria-hidden="true"></i> Teléfono: <%= ticket[0].telefono %> <br>
                            <i class="fas fa-mail-bulk    "></i> Correo de la empresa: <%= ticket[0].correo_empresarial %> <br>
                            <i class="fas fa-mail-bulk    "></i> Correo del representante: 
                                <a name="" id="" class="btn btn-link" href="mailto:<%= ticket[0].correo %>" role="button">
                                    <span class="badge bg-primary"><%= ticket[0].correo %></span>
                                </a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="ticket-info">
                <div class="card">
                    <div class="card-header">
                        <h3>
                            <%= ticket[0].contenido %>
                            <% if(ticket[0].prioridad=="Por evaluar" ) { %>
                                <span class="badge bg-secondary">
                                    <i class="fa fa-question-circle-o" aria-hidden="true"></i>
                                    <%= ticket[0].prioridad %>
                                </span>
                            <% } else if(ticket[0].prioridad=="Baja" ) { %>
                                <span class="badge bg-info">
                                    <i class="fa fa-arrow-down" aria-hidden="true"></i>
                                    <%= ticket[0].prioridad %>
                                </span>
                            <% } else if(ticket[0].prioridad=="Normal" ) { %>
                                <span class="badge bg-success">
                                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                                        <%= ticket[0].prioridad %>
                                    </span>
                            <% } else if(ticket[0].prioridad=="Alta" ) { %>
                                <span class="badge bg-warning">
                                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                                        <%= ticket[0].prioridad %>
                                </span>
                            <% } else { %>
                                <span class="badge bg-danger">
                                    <i class="fa fa-fire" aria-hidden="true"></i>
                                        <%= ticket[0].prioridad %>
                                </span>
                            <% } %>
                            <% if(ticket[0].estado=="Abierto" ) { %>
                                <span class="badge bg-danger rounded-pill">
                                    <i class="fa fa-clock-o" aria-hidden="true"></i>
                                        <%= ticket[0].estado %>
                                </span>
                            <% } else if(ticket[0].estado=="En proceso" ) { %>
                                <span class="badge bg-warning rounded-pill">
                                    <i class="fa fa-cog" aria-hidden="true"></i>
                                        <%= ticket[0].estado %>
                                </span>
                            <% } else { %>
                                <span class="badge bg-success rounded-pill">
                                    <i class="fa-regular fa-flag"></i>
                                        <%= ticket[0].estado %>
                                </span>
                        <% } %>
                        </h3>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Descripción</h4>
                        <p class="card-text"><i class="fa-solid fa-code-branch"></i> Version del software: <%= ticket[0].version %></p>
                        <p class="card-text"><%= ticket[0].descripcion %></p>
                    </div>
                    <div class="card-footer text-muted">
                        <div class="support">
                            <h3>Ingeniero</h3>
                            <% if(ticket[0].id_ingeniero_fk === null) { %>
                                <p>
                                    <i class="fas fa-headset    "></i> Ingeniero: <span class="badge rounded-pill bg-secondary"><i class="fa-solid fa-person-circle-question"></i> No asignado</span>
                                </p>

                                <form action="" method="post">
                                    <div class="form-group">
                                      <label for=""><i class="fa fa-user-plus" aria-hidden="true"></i> Asignar ingeniero:</label>
                                      <select name="ingeniero" id="" class="form-control">
                                      </select>
                                      <button type="submit" name="" id="" class="btn btn-primary">
                                        Asignar
                                      </button>
                                    </div>
                                </form>
                            <% } else { %>
                                <p>
                                    <i class="fas fa-headset    "></i> Ingeniero: <%= ingeniero[0].nombre %>
                                    <% if(ingeniero[0].categoria == "Básico") { %>
                                        <span class="badge rounded-pill bg-success">
                                            <i class="fa-solid fa-chart-simple"></i> <%= ingeniero[0].categoria %>
                                        </span>
                                    <% } else if(ingeniero[0].categoria == "Intermedio") { %>
                                        <span class="badge rounded-pill bg-warning">
                                            <i class="fa-solid fa-chart-simple"></i> <%= ingeniero[0].categoria %>
                                        </span>
                                    <% } else { %>
                                        <span class="badge rounded-pill bg-danger">
                                            <i class="fa-solid fa-chart-simple"></i> <%= ingeniero[0].categoria %>
                                        </span>
                                    <% } %>
                                </p>
                            <% } %>
                        </div>

                        <hr>

                        <div class="prioridad">
                            <h3>Prioridad del problema</h3>
                            <% if(ticket[0].prioridad === "Por evaluar") { %>
                                <p><i class="fas fa-chart-line    "></i> Prioridad: <span class="badge bg-secondary">
                                    <i class="fa fa-question-circle-o" aria-hidden="true"></i>
                                    <%= ticket[0].prioridad %>
                                </span></p>

                                <form action="" method="post">
                                    <div class="form-group">
                                      <label for=""><i class="fas fa-chart-line    "></i> Asignar prioridad</label>
                                      <select name="prioridad" id="" class="form-control">
                                        <option value="Baja">Baja</option>
                                        <option value="Normal">Normal</option>
                                        <option value="Alta">Alta</option>
                                        <option value="Urgente">Urgente</option>
                                      </select>
                                      <button type="button" name="" id="" class="btn btn-primary">
                                        Asignar
                                    </button>
                                    </div>
                                </form>
                            <% } else { %>
                                <% if(ticket[0].prioridad=="Baja" ) { %>
                                    <span class="badge bg-info">
                                        <i class="fa fa-arrow-down" aria-hidden="true"></i>
                                        <%= ticket[0].prioridad %>
                                    </span>
                                <% } else if(ticket[0].prioridad=="Normal" ) { %>
                                    <span class="badge bg-success">
                                        <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                                            <%= ticket[0].prioridad %>
                                        </span>
                                <% } else if(ticket[0].prioridad=="Alta" ) { %>
                                    <span class="badge bg-warning">
                                        <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                                            <%= ticket[0].prioridad %>
                                    </span>
                                <% } else { %>
                                    <span class="badge bg-danger">
                                        <i class="fa fa-fire" aria-hidden="true"></i>
                                            <%= ticket[0].prioridad %>
                                    </span>
                                <% } %>
                            <% } %>
                        </div>

                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>