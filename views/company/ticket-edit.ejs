<%- include("base-panel.ejs") %>

<link rel="stylesheet" href="/css/company/edit-ticket.css">

<div class="container">
    <form action="/ticket-info/edit/update" method="post">
        <div class="content-top">
          <i class="fa fa-ticket" aria-hidden="true"></i>
            <h4><%= ticket[0].contenido %></h4>
        </div>
        <div class="form-group">
          <label for=""><i class="fa-solid fa-code-branch"></i> Version del software:</label>
          <input type="text" name="version" id="" class="form-control" required autocomplete="off" placeholder="" value="<%= ticket[0].version %>">

          <label for=""><i class="fa-solid fa-triangle-exclamation"></i> Referencia de la falla:</label>
          <select name="referencia" id="" class="form-control">
            <% for(let i = 0; i < referencia.length; i++) { %>
              <option value="<%= referencia[i].id_referencia_pk %>"><%= referencia[i].contenido %></option>
            <% } %>
          </select>

          <div class="buttons">
            <button type="submit" name="" id="" class="btn btn-primary" btn-lg btn-block">
                <i class="fa fa-check-circle-o" aria-hidden="true"></i> Guardar cambios
            </button>

            <a name="" id="" class="btn btn-link" href="/company-panel" role="button">
                <i class="fa fa-arrow-left" aria-hidden="true"></i> Regresar
            </a>
          </div>
        </div>
    </form>
</div>
